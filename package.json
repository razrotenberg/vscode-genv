{
  "name": "vscode-genv",
  "version": "0.1.0",
  "displayName": "GPU Environments",
  "description": "Lets you interactively control, configure and monitor the GPU resources that you are using.",
  "engines": {
    "vscode": "^1.70.0"
  },
  "homepage": "https://github.com/run-ai/vscode-genv",
  "license": "SEE LICENSE IN LICENSE",
  "author": {
    "name": "Raz Rotenberg",
    "email": "raz.rotenberg@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/run-ai/vscode-genv.git"
  },
  "bugs": {
    "url": "https://github.com/run-ai/vscode-genv/issues",
    "email": "raz.rotenberg@gmail.com"
  },
  "qna": "https://github.com/run-ai/vscode-genv/issues",
  "categories": [
    "Machine Learning",
    "Data Science",
    "Other"
  ],
  "keywords": [
    "gpu",
    "gpus",
    "nvidia",
    "conda"
  ],
  "activationEvents": [
    "onCommand:genv.env.activate",
    "onCommand:genv.env.config.gpus",
    "onCommand:genv.env.config.name",
    "onCommand:genv.env.attach",
    "onView:genv.env",
    "onView:genv.devices",
    "onView:genv.envs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "genv.installation.refresh",
        "title": "Refresh Installation",
        "category": "GPUs",
        "icon": "$(refresh)"
      },
      {
        "command": "genv.installation.install",
        "title": "Download and Install genv",
        "category": "GPUs",
        "icon": "$(cloud-download)"
      },
      {
        "command": "genv.env.activate",
        "title": "Activate Environment",
        "category": "GPUs"
      },
      {
        "command": "genv.env.config.gpus",
        "title": "Configure Environment Device Count",
        "category": "GPUs"
      },
      {
        "command": "genv.env.config.name",
        "title": "Configure Environment Name",
        "category": "GPUs"
      },
      {
        "command": "genv.env.attach",
        "title": "Attach Environment to Devices",
        "category": "GPUs"
      },
      {
        "command": "genv.env.detach",
        "title": "Detach Environment from Devices",
        "category": "GPUs"
      },
      {
        "command": "genv.env.refresh",
        "title": "Refresh Active Environment",
        "category": "GPUs"
      },
      {
        "command": "genv.devices.refresh",
        "title": "Refresh Devices",
        "category": "GPUs",
        "icon": "$(refresh)"
      },
      {
        "command": "genv.envs.refresh",
        "title": "Refresh Environments",
        "category": "GPUs",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "genv.installation.refresh",
          "when": "genv.installation.uninstalled"
        },
        {
          "command": "genv.installation.install",
          "when": "genv.installation.uninstalled"
        }
      ],
      "view/title": [
        {
          "command": "genv.installation.refresh",
          "when": "view == genv.env && genv.installation.uninstalled",
          "group": "navigation"
        },
        {
          "command": "genv.installation.install",
          "when": "view == genv.env && genv.installation.uninstalled",
          "group": "navigation"
        },
        {
          "command": "genv.devices.refresh",
          "when": "view == genv.devices",
          "group": "navigation"
        },
        {
          "command": "genv.envs.refresh",
          "when": "view == genv.envs",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "gpus": [
        {
          "id": "genv.env",
          "name": "Active"
        },
        {
          "id": "genv.envs",
          "name": "Environments",
          "when": "genv.installation.installed"
        },
        {
          "id": "genv.devices",
          "name": "Devices",
          "when": "genv.installation.installed"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gpus",
          "title": "GPUs",
          "icon": "resources/gpu.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "genv.env",
        "contents": "Seems like genv is not installed [learn more](https://github.com/run-ai/genv#readme).\n[Install](command:genv.installation.install)",
        "when": "genv.installation.uninstalled"
      },
      {
        "view": "genv.env",
        "contents": "GPU environment is not activated [learn more](https://github.com/run-ai/genv#readme).\n[Activate Environment](command:genv.env.activate)",
        "when": "genv.installation.installed"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "moment": "^2.29.4"
  }
}
